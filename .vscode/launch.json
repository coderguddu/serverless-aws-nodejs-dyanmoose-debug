    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "POST User",
            "program": "${workspaceFolder}/node_modules/.bin/serverless",
            "args": ["invoke", "local", "-f", "create", "--path", "debug/post_user"]
